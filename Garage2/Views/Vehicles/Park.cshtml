@model Garage2.Models.Vehicle

@{
    ViewData["Title"] = "Park";
}

    <head>
        <link rel="stylesheet" type="text/css" href="~/css/vehicles.css" />
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    </head>

<h1>Park</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Park">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="RegNr" class="control-label"></label>
                        <input asp-for="RegNr" class="form-control" autofocus="autofocus" tabindex="1" />
                        <span asp-validation-for="RegNr" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" tabindex="3" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model" class="control-label"></label>
                        <input asp-for="Model" class="form-control" tabindex="5" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Manufacturer" class="control-label"></label>
                        <input asp-for="Manufacturer" class="form-control" tabindex="2" />
                        <span asp-validation-for="Manufacturer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NOWheels" class="control-label"></label>
                        <input asp-for="NOWheels" class="form-control" tabindex="4" />
                        <span asp-validation-for="NOWheels" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList<TypeOfVehicle>()" tabindex="6"></select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>

            </div>
           

            <div class="form-group">
                <input type="submit" value="Park" class="btn btn-success" tabindex="7" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" tabindex="8">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
